@using System.Security.Claims
@{
    var isAuthenticated = User.Identity?.IsAuthenticated ?? false;
    var isAdmin = User.IsInRole("Admin");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HotStuff</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            background-color: #f8f9fa;
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 20px;
        }

        .nav-link {
            font-weight: 500;
            transition: 0.2s;
        }

            .nav-link:hover {
                color: #ffc107 !important;
            }

            .nav-link.active {
                color: #ffc107 !important;
            }

        footer {
            background-color: #212529;
            color: white;
        }

        .welcome-text {
            font-weight: 500;
        }

        /* ===============================
                   MOBILE + TABLET SIDE DRAWER
                ================================= */
        @@media (max-width: 991px) {

            .custom-drawer {
                position: fixed;
                top: 0;
                left: -100%;
                height: 100vh;
                width: 70%;
                background-color: #212529;
                padding: 25px;
                transition: left 0.3s ease-in-out;
                z-index: 1050;
                display: flex !important;
                flex-direction: column;
            }

                .custom-drawer.show {
                    left: 0;
                }

            .navbar-nav {
                flex-direction: column !important;
                width: 100%;
            }

                .navbar-nav .nav-item {
                    width: 100%;
                    margin-bottom: 10px;
                }

                .navbar-nav .nav-link {
                    font-size: 16px;
                    padding: 10px;
                }

            .navbar-toggler {
                border: none;
            }

            .drawer-overlay {
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0,0,0,0.5);
                display: none;
                z-index: 1040;
            }

                .drawer-overlay.active {
                    display: block;
                }
        }
    </style>
</head>

<body>

    <!-- ================= NAVBAR ================= -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container">

            <!-- LEFT : BRAND -->
            <a class="navbar-brand d-flex align-items-center gap-2"
               asp-controller="Home"
               asp-action="Index">
                <i class="bi bi-fire text-warning"></i>
                HotStuff
            </a>

            <!-- TOGGLER -->
            <button class="navbar-toggler" type="button">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse custom-drawer" id="navbarNav">

                <!-- CENTER MENU -->
                <ul class="navbar-nav mx-auto text-center">

                    @if (!isAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Products">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="AboutUs">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="ContactUs">Contact Us</a>
                        </li>
                    }
                    else if (isAdmin)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="AdminDashboard" asp-action="Index">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Categories" asp-action="Index">Manage Categories</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Products" asp-action="Index">Manage Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="AdminOrders" asp-action="Index">Manage Orders</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Products">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="AboutUs">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="ContactUs">Contact Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Order" asp-action="MyOrders">My Orders</a>
                        </li>
                    }

                </ul>

                <!-- RIGHT SIDE -->
                <ul class="navbar-nav align-items-center">

                    <!-- Search -->
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Products">
                            <i class="bi bi-search"></i>
                        </a>
                    </li>

                    <!-- Cart -->
                    @if (!isAdmin)
                    {
                        <li class="nav-item">
                            <a class="nav-link position-relative"
                               asp-controller="Cart"
                               asp-action="Index">
                                <i class="bi bi-cart3"></i>
                            </a>
                        </li>
                    }

                    @if (!isAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Account"
                               asp-action="Login">
                                Login
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="btn btn-warning btn-sm ms-2"
                               asp-controller="Account"
                               asp-action="Register">
                                Register
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <span class="nav-link text-warning welcome-text">
                                Hi, @User.Identity!.Name
                            </span>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-danger"
                               asp-controller="Account"
                               asp-action="Logout">
                                Logout
                            </a>
                        </li>
                    }

                </ul>

            </div>
        </div>
    </nav>

    <div class="drawer-overlay" id="drawerOverlay"></div>

    <!-- ================= MAIN BODY ================= -->
    <main class="container mt-4 mb-5">
        @RenderBody()
    </main>

    <!-- ================= FOOTER ================= -->
    <footer class="text-center p-3">
        <div class="container">
            <small>
                © 2026 HotStuff | Built with ASP.NET Core MVC
            </small>
        </div>
    </footer>

    <!-- ================= SCRIPTS ================= -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

    <script>
        const toggler = document.querySelector('.navbar-toggler');
        const drawer = document.getElementById('navbarNav');
        const overlay = document.getElementById('drawerOverlay');

        toggler.addEventListener('click', function () {
            drawer.classList.toggle('show');
            overlay.classList.toggle('active');
        });

        overlay.addEventListener('click', function () {
            drawer.classList.remove('show');
            overlay.classList.remove('active');
        });
    </script>

</body>
</html>