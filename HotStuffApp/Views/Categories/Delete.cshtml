@model HotStuffApp.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="delete-container">
    <div class="delete-card">

        <div class="image-wrapper">
            <img src="~/images/@Model.ImageUrl" alt="@Model.CategoryName" />
        </div>

        <div class="content">
            <h2>Delete Category</h2>

            <p class="warning-text">
                ⚠ Are you sure you want to permanently delete this category?
            </p>

            <h3 class="category-name">@Model.CategoryName</h3>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="CategoryId" />

                <div class="button-group">
                    <button type="submit" class="btn delete-btn">
                        Delete Permanently
                    </button>

                    <a asp-action="Index" class="btn cancel-btn">
                        Cancel
                    </a>
                </div>
            </form>
        </div>

    </div>
</div>

<style>
    .delete-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 70vh;
        background-color: #f8f9fa;
        padding: 20px;
    }

    .delete-card {
        background: white;
        width: 420px;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        text-align: center;
        animation: fadeIn 0.4s ease;
    }

    .image-wrapper {
        height: 200px;
        overflow: hidden;
    }

        .image-wrapper img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .content {
        padding: 25px;
    }

    .warning-text {
        color: #dc3545;
        font-weight: 500;
        margin: 15px 0;
    }

    .category-name {
        margin-bottom: 20px;
        font-weight: 600;
    }

    .button-group {
        display: flex;
        justify-content: center;
        gap: 10px;
    }

    .btn {
        padding: 8px 16px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 500;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        color: white;
    }

    .delete-btn {
        background-color: #dc3545;
    }

        .delete-btn:hover {
            background-color: #a71d2a;
        }

    .cancel-btn {
        background-color: #6c757d;
    }

        .cancel-btn:hover {
            background-color: #545b62;
        }

    @@media (max-width: 500px) {
        .delete-card {
            width: 100%;
        }
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(15px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>