@model HotStuffApp.Models.ViewModels.AdminDashboardVM

<h2 class="mb-4">Admin Dashboard</h2>

<div class="row">

    <div class="col-md-3">
        <div class="card bg-primary text-white p-3 mb-3">
            <h5>Total Orders</h5>
            <h3>@Model.TotalOrders</h3>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-success text-white p-3 mb-3">
            <h5>Total Revenue</h5>
            <h3>₹ @Model.TotalRevenue</h3>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-warning text-white p-3 mb-3">
            <h5>Total Products</h5>
            <h3>@Model.TotalProducts</h3>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-dark text-white p-3 mb-3">
            <h5>Total Categories</h5>
            <h3>@Model.TotalCategories</h3>
        </div>
    </div>

</div>
