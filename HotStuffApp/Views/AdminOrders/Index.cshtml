@using HotStuffApp.Models.Enums

<h2>All Orders</h2>

<table class="table">
    <tr>
        <th>Order ID</th>
        <th>Date</th>
        <th>Total</th>
        <th>Action</th>
        <th>Status</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.OrderId</td>
            <td>@item.OrderDate</td>
            <td>₹@item.OrderTotal</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.OrderId" class="btn btn-info btn-sm">
                    View
                </a>

                <a asp-action="Delete" asp-route-id="@item.OrderId" class="btn btn-danger btn-sm">
                    Delete
                </a>

            </td>

            <td>
                @if (item.Status == OrderStatus.Pending)
                {
                    <span class="badge bg-secondary">Pending</span>
                }
                else if (item.Status == OrderStatus.Preparing)
                {
                    <span class="badge bg-warning text-dark">Preparing</span>
                }
                else if (item.Status == OrderStatus.OutForDelivery)
                {
                    <span class="badge bg-info text-dark">Out For Delivery</span>
                }
                else if (item.Status == OrderStatus.Delivered)
                {
                    <span class="badge bg-success">Delivered</span>
                }
                else if (item.Status == OrderStatus.Cancelled)
                {
                    <span class="badge bg-danger">Cancelled</span>
                }
            </td>

        </tr>
    }
</table>
