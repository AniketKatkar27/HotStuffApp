@model IEnumerable<HotStuffApp.Models.CartItem>

<h2>Your Cart</h2>

<table class="table">
    <tr>
        <th>Product</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Total</th>
        <th>Action</th>
    </tr>

    @{
        decimal grandTotal = 0;
    }

    @foreach (var item in Model)
    {
        var total = item.ProductPrice * item.Quantity;
        grandTotal += total;

        <tr>
            <td>@item.ProductName</td>
            <td>₹@item.ProductPrice</td>
            <td>@item.Quantity</td>
            <td>₹@total</td>
            <td>
                <a asp-controller="Cart"
                   asp-action="RemoveFromCart"
                   asp-route-id="@item.ProductId"
                   class="btn btn-danger btn-sm">
                    Remove
                </a>
            </td>
        </tr>
    }
</table>

<h4>Grand Total: ₹@grandTotal</h4>

<a asp-controller="Order"
   asp-action="Checkout"
   class="btn btn-success">
    Place Order
</a>

