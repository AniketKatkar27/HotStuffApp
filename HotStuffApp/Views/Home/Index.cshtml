@model IEnumerable<HotStuffApp.Models.Category>

@{
    ViewData["Title"] = "Home";
}

<!-- HERO SECTION -->
<div class="p-5 mb-4 bg-dark text-white rounded-3 shadow">
    <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold">Welcome to HotStuffApp 🔥</h1>
        <p class="col-md-8 fs-4">
            Fresh. Fast. Delicious.
            Order your favourite food now!
        </p>
    </div>
</div>

<h2 class="mb-4">Browse Categories</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card shadow-lg border-0 h-100 text-center">

                <div class="card-body">
                    <h5 class="card-title">@item.CategoryName</h5>

                    <a asp-controller="Home"
                       asp-action="ProductsByCategory"
                       asp-route-id="@item.CategoryId"
                       class="btn btn-outline-dark mt-2">
                        View Products
                    </a>
                </div>

            </div>
        </div>
    }
</div>
