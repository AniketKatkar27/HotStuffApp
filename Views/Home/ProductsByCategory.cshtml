@model IEnumerable<HotStuffApp.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="container py-5">

    <!-- ================= HEADER ================= -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0">Products</h2>
    </div>

    <!-- ================= SEARCH ================= -->
    <form method="get" class="mb-5">
        <input type="hidden" name="id" value="@ViewBag.CurrentCategory" />

        <div class="input-group input-group-lg shadow-sm">
            <input type="text"
                   name="search"
                   value="@Context.Request.Query["search"]"
                   class="form-control"
                   placeholder="Search products..." />

            <button class="btn btn-dark px-4">
                <i class="bi bi-search me-1"></i> Search
            </button>
        </div>
    </form>

    <!-- ================= PRODUCTS GRID ================= -->
    <div class="row g-4">

        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="card h-100 border-0 shadow-sm rounded-4 product-card">

                        <!-- PRODUCT IMAGE -->
                        <div class="text-center p-3">
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <img src="~/images/@item.ImageUrl"
                                     class="img-fluid rounded-3"
                                     style="height:180px; object-fit:cover;"
                                     alt="@item.ProductName" />
                            }
                            else
                            {
                                <div class="bg-light rounded-3 d-flex align-items-center justify-content-center"
                                     style="height:180px;">
                                    <span class="text-muted">No Image</span>
                                </div>
                            }
                        </div>

                        <!-- PRODUCT BODY -->
                        <div class="card-body text-center">

                            <h6 class="fw-semibold mb-2 text-truncate">
                                @item.ProductName
                            </h6>

                            <p class="text-success fw-bold fs-5 mb-3">
                                ₹ @item.ProductPrice.ToString("N2")
                            </p>

                            <a asp-controller="Cart"
                               asp-action="AddToCart"
                               asp-route-id="@item.ProductId"
                               class="btn btn-primary rounded-pill px-4">
                                <i class="bi bi-cart-plus me-1"></i>
                                Add to Cart
                            </a>

                        </div>

                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center py-5">
                <h5 class="text-muted">No products found.</h5>
            </div>
        }

    </div>

</div>

<style>
    .product-card {
        transition: all 0.25s ease-in-out;
    }

        .product-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 12px 24px rgba(0,0,0,0.08);
        }
</style>