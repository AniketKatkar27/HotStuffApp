@{
    ViewData["Title"] = "About Us";
}

<div class="container py-5">

    <!-- Outer Card Wrapper -->
    <div class="bg-white shadow-lg rounded-4 p-5">

        <!-- Header -->
        <div class="text-center mb-5">
            <h2 class="fw-bold">About HotStuff</h2>
            <p class="text-muted fs-5">
                Delivering quality products with passion.
            </p>
        </div>

        <div class="row align-items-center g-5">

            <!-- Image -->
            <div class="col-md-6">
                <img src="~/images/about.jpg"
                     class="img-fluid rounded-4 shadow-sm"
                     alt="About HotStuff" />
            </div>

            <!-- Content -->
            <div class="col-md-6">

                <div class="mb-5">
                    <h4 class="fw-semibold mb-3 text-primary">
                        Who We Are
                    </h4>
                    <p class="text-muted lh-lg">
                        HotStuff is a modern e-commerce platform built with ASP.NET Core MVC.
                        Our mission is to provide customers with high-quality products and
                        a seamless shopping experience. We focus on reliability, performance,
                        and customer satisfaction.
                    </p>
                </div>

                <div class="pt-3 border-top">
                    <h4 class="fw-semibold mb-3 text-success">
                        Our Vision
                    </h4>
                    <p class="text-muted lh-lg">
                        To become a trusted online marketplace delivering innovation,
                        quality, and customer satisfaction while continuously improving
                        technology and user experience.
                    </p>
                </div>

            </div>

        </div>

    </div>

</div>