@model HotStuffApp.Models.Category

@{
    ViewData["Title"] = "Edit Category";
}

<div class="edit-container">
    <div class="edit-card">

        <h2 class="page-title">Edit Category</h2>

        <form asp-action="Edit" method="post" enctype="multipart/form-data">

            <input type="hidden" asp-for="CategoryId" />

            <div asp-validation-summary="ModelOnly" class="text-danger validation-summary"></div>

            <!-- Category Name -->
            <div class="form-group">
                <label asp-for="CategoryName" class="form-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger small"></span>
            </div>

            <!-- Image Preview -->
            <div class="form-group image-preview">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="~/images/@Model.ImageUrl" alt="Category Image" />
                }
                else
                {
                    <p class="no-image">No image uploaded</p>
                }
            </div>

            <!-- Change Image -->
            <div class="form-group">
                <label class="form-label">Change Image</label>
                <input type="file" name="imageFile" class="form-control file-input" />
            </div>

            <!-- Buttons -->
            <div class="button-group">
                <button type="submit" class="btn update-btn">Update</button>
                <a asp-action="Index" class="btn cancel-btn">Cancel</a>
            </div>

        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .edit-container {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 40px 20px;
        background-color: #f4f6f9;
        min-height: 80vh;
    }

    .edit-card {
        background: #ffffff;
        padding: 30px;
        border-radius: 16px;
        width: 100%;
        max-width: 500px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.08);
    }

    .page-title {
        text-align: center;
        margin-bottom: 25px;
        font-size: 26px;
        font-weight: 600;
        color: #333;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: 500;
        display: block;
        margin-bottom: 6px;
        color: #444;
    }

    .form-control {
        width: 100%;
        padding: 10px 12px;
        border-radius: 8px;
        border: 1px solid #ced4da;
        font-size: 14px;
        transition: 0.2s ease;
    }

        .form-control:focus {
            border-color: #007bff;
            outline: none;
            box-shadow: 0 0 0 2px rgba(0,123,255,0.15);
        }

    .file-input {
        padding: 6px;
        background-color: #f8f9fa;
        cursor: pointer;
    }

    .image-preview {
        text-align: center;
    }

        .image-preview img {
            width: 140px;
            height: 140px;
            object-fit: cover;
            border-radius: 12px;
            border: 2px solid #eee;
            margin-bottom: 10px;
        }

    .no-image {
        font-size: 14px;
        color: #888;
    }

    .validation-summary {
        margin-bottom: 15px;
    }

    .button-group {
        display: flex;
        justify-content: space-between;
        gap: 10px;
        margin-top: 25px;
    }

    .btn {
        flex: 1;
        padding: 10px 18px;
        border-radius: 8px;
        text-decoration: none;
        font-size: 14px;
        font-weight: 500;
        color: white;
        border: none;
        cursor: pointer;
        transition: 0.3s ease;
        text-align: center;
    }

    .update-btn {
        background-color: #28a745;
    }

        .update-btn:hover {
            background-color: #1e7e34;
        }

    .cancel-btn {
        background-color: #6c757d;
    }

        .cancel-btn:hover {
            background-color: #545b62;
        }

    @@media (max-width: 500px) {
        .button-group {
            flex-direction: column;
        }
    }
</style>