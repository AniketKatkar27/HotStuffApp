@{
    ViewData["Title"] = "Login";
}

<div class="login-wrapper">
    <div class="login-card">
        <h2 class="login-title">Welcome Back 👋</h2>
        <p class="login-subtitle">Sign in to continue</p>

        <form method="post">
            <div class="form-group">
                <input name="username" placeholder="Username" class="form-control" required />
            </div>

            <div class="form-group">
                <input name="password" type="password" placeholder="Password" class="form-control" required />
            </div>

            <button class="btn-login">Sign In</button>
        </form>

        @if (ViewBag.Message != null)
        {
            <p class="error-message">@ViewBag.Message</p>
        }

        <div class="register-link">
            <span>New user?</span>
            <a asp-action="Register">Create an account</a>
        </div>
    </div>
</div>

<style>
    body {
        margin: 0;
        font-family: 'Segoe UI', sans-serif;
        background: linear-gradient(135deg, #ff7e5f, #feb47b);
        height: 100vh;
    }

    .login-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        padding: 20px;
    }

    .login-card {
        background: white;
        width: 100%;
        max-width: 400px;
        padding: 40px 30px;
        border-radius: 18px;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
        text-align: center;
        animation: fadeIn 0.6s ease-in-out;
    }

    .login-title {
        margin-bottom: 5px;
        font-size: 26px;
        font-weight: 600;
    }

    .login-subtitle {
        margin-bottom: 25px;
        color: #777;
        font-size: 14px;
    }

    .form-group {
        margin-bottom: 18px;
    }

    .form-control {
        width: 100%;
        padding: 12px;
        border-radius: 8px;
        border: 1px solid #ddd;
        font-size: 14px;
        transition: border 0.3s ease;
    }

        .form-control:focus {
            border-color: #ff7e5f;
            outline: none;
        }

    .btn-login {
        width: 100%;
        padding: 12px;
        background: #ff7e5f;
        border: none;
        border-radius: 8px;
        color: white;
        font-size: 15px;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.3s ease;
    }

        .btn-login:hover {
            background: #e8674f;
        }

    .error-message {
        color: red;
        margin-top: 10px;
        font-size: 14px;
    }

    .register-link {
        margin-top: 20px;
        font-size: 14px;
    }

        .register-link a {
            color: #ff7e5f;
            font-weight: 600;
            text-decoration: none;
        }

            .register-link a:hover {
                text-decoration: underline;
            }

    @@media (max-width: 480px) {
        .login-card {
            padding: 30px 20px;
        }
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(15px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>