@model HotStuffApp.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<div class="container py-5">

    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-8">

            <div class="card shadow-lg border-0 rounded-4">

                <div class="card-body p-5">

                    <!-- HEADER -->
                    <div class="d-flex justify-content-between align-items-center mb-4">

                        <h4 class="fw-bold mb-0">
                            <i class="bi bi-receipt me-2 text-primary"></i>
                            Order #@Model.OrderId
                        </h4>

                        @{
                            string badgeClass = Model.Status.ToString() switch
                            {
                                        "Pending" => "bg-warning text-dark",
                                        "Confirmed" => "bg-info text-dark",
                                        "Shipped" => "bg-primary",
                                        "Delivered" => "bg-success",
                                        "Cancelled" => "bg-danger",
                                _ => "bg-secondary"
                            };
                        }

                        <span class="badge rounded-pill px-3 py-2 @badgeClass">
                            @Model.Status
                        </span>

                    </div>

                    <!-- ORDER SUMMARY -->
                    <div class="row mb-4 text-center">

                        <div class="col-md-4">
                            <p class="text-muted mb-1">Order Date</p>
                            <h6 class="fw-semibold">
                                @Model.OrderDate.ToString("dd MMM yyyy")
                            </h6>
                        </div>

                        <div class="col-md-4">
                            <p class="text-muted mb-1">Customer</p>
                            <h6 class="fw-semibold">
                                @Model.User?.UserName
                            </h6>
                        </div>

                        <div class="col-md-4">
                            <p class="text-muted mb-1">Total Amount</p>
                            <h6 class="fw-bold text-success fs-5">
                                ₹ @Model.OrderTotal.ToString("N2")
                            </h6>
                        </div>

                    </div>

                    <hr />

                    <!-- PRODUCTS TABLE -->
                    <h5 class="fw-semibold mb-3 text-center">
                        Items in this Order
                    </h5>

                    <div class="table-responsive">
                        <table class="table align-middle text-center">

                            <thead class="table-light">
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Subtotal</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model.OrderDetails)
                                {
                                    <tr>
                                        <td class="fw-medium">
                                            @item.ProductName
                                        </td>

                                        <td>
                                            ₹ @item.ProductPrice.ToString("N2")
                                        </td>

                                        <td>
                                            @item.Quantity
                                        </td>

                                        <td class="fw-semibold">
                                            ₹ @((item.ProductPrice * item.Quantity).ToString("N2"))
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>

                    <!-- GRAND TOTAL -->
                    <div class="text-end mt-4">
                        <h5 class="fw-bold">
                            Grand Total:
                            <span class="text-success">
                                ₹ @Model.OrderTotal.ToString("N2")
                            </span>
                        </h5>
                    </div>

                    <!-- BACK BUTTON -->
                    <div class="text-center mt-5">
                        <a asp-action="Index"
                           class="btn btn-outline-secondary rounded-pill px-4">
                            Back to Manage Orders
                        </a>
                    </div>

                </div>

            </div>

        </div>
    </div>

</div>